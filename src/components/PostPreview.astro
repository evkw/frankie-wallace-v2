---
import type { PostSchema } from "../content.config";

const props = Astro.props;
const post = props.post.data as PostSchema;
---

<article
  class="flex w-full flex-col items-start justify-between bg-white p-5 shadow-sm hover:shadow-md transition-shadow"
>
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime={post.published.toISOString()} class="text-gray-500"
      >{post.published.toDateString()}</time
    >
  </div>
  <div class="group relative">
    <h3
      class="mt-2 text-xl font-semibold text-gray-900 group-hover:text-gray-700"
    >
      <a href={`/journal/${post.slug}`}>
        <span class="absolute inset-0"></span>
        {post.title}
      </a>
    </h3>
    <p class="mt-3 line-clamp-3 text-sm text-gray-700">
      {post.description}
    </p>
  </div>
</article>
