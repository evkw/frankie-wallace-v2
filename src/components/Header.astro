---
import Banner from './Banner.astro';
import { Image } from 'astro:assets';
import logoImage from '../data/images/Frankie-logo-dark.avif';
import { getActiveRoutes } from '../config/navigation';
---

<div class="bg-white">
  <!-- <Banner /> -->
  
  
  <!-- Mobile menu -->
  <el-dialog>
    <dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
      <el-dialog-backdrop
        class="fixed inset-0 bg-black/25 transition-opacity duration-300 ease-linear data-closed:opacity-0"
      ></el-dialog-backdrop>
      <div tabindex="0" class="fixed inset-0 flex focus:outline-none">
        <el-dialog-panel
          class="relative flex w-full max-w-xs transform flex-col overflow-y-auto bg-white pb-12 shadow-xl transition duration-300 ease-in-out data-closed:-translate-x-full"
        >
          <div class="flex px-4 pt-5 pb-2">
            <button
              type="button"
              class="relative -m-2 inline-flex items-center justify-center rounded-md p-2 text-gray-400"
              onclick="document.getElementById('mobile-menu').close()"
            >
              <span class="absolute -inset-0.5"></span>
              <span class="sr-only">Close menu</span>
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                data-slot="icon"
                aria-hidden="true"
                class="size-6"
              >
                <path
                  d="M6 18 18 6M6 6l12 12"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </button>
          </div>

          <div class="space-y-6 border-t border-gray-200 px-4 py-6">
            <Image
              src={logoImage}
              alt="Frankie Wallace Logo"
              class="h-24 w-auto object-contain"
            />

            {getActiveRoutes().map((item) => (
              <div class="flow-root">
                {item.subItems && item.subItems.length > 0 ? (
                  <div class="space-y-2">
                    <button
                      type="button"
                      class="mobile-nav-toggle w-full text-left -m-2 block p-2 font-medium text-gray-900 flex items-center justify-between"
                      data-target={`mobile-submenu-${item.label.toLowerCase().replace(/\s+/g, '-')}`}
                    >
                      {item.label}
                      <svg class="w-4 h-4 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                      </svg>
                    </button>
                    <div 
                      id={`mobile-submenu-${item.label.toLowerCase().replace(/\s+/g, '-')}`}
                      class="mobile-submenu hidden pl-4 space-y-2"
                    >
                      {item.subItems.map((subItem) => (
                        <a 
                          href={subItem.href} 
                          class="-m-2 block p-2 text-sm text-gray-600 hover:text-gray-900"
                          {...(subItem.isExternal && { target: "_blank", rel: "noopener noreferrer" })}
                        >
                          {subItem.label}
                        </a>
                      ))}
                    </div>
                  </div>
                ) : (
                  <a 
                    href={item.href} 
                    class="-m-2 block p-2 font-medium text-gray-900"
                    {...(item.isExternal && { target: "_blank", rel: "noopener noreferrer" })}
                  >
                    {item.label}
                  </a>
                )}
              </div>
            ))}
          </div>
        </el-dialog-panel>
      </div>
    </dialog>
  </el-dialog>

  <header class="relative">
    <nav aria-label="Top">
      <!-- Secondary navigation -->
      <div class="bg-white p-4 lg:p-8 flex justify-between items-center">
        <div class="lg:mx-auto max-w-7xl px-2 sm:px-2 lg:px-8">
            <div class="flex h-16 items-center justify-between">
              <!-- Logo (lg+) -->
              <div class="hidden lg:flex lg:items-center">
                <a href="/">
                  <Image
                    src={logoImage}
                    alt="Frankie Wallace Logo"
                    class="h-24 w-auto object-contain"
                  />
                </a>
              </div>

              <div class="hidden h-full lg:flex">
                <div class="flex h-full justify-center space-x-8">
                  {getActiveRoutes().map((item) => (
                    <div class="relative group">
                      {item.subItems && item.subItems.length > 0 ? (
                        <div class="relative">
                          <button
                            type="button"
                            class="flex items-center text-sm font-medium text-gray-700 hover:text-gray-800 py-2"
                          >
                            {item.label}
                            <svg class="ml-1 w-4 h-4 transform transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                          </button>
                          <div class="absolute top-full left-0 mt-1 w-48 bg-white border border-gray-200 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                            <div class="py-2">
                              {item.subItems.map((subItem) => (
                                <a
                                  href={subItem.href}
                                  class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900"
                                  {...(subItem.isExternal && { target: "_blank", rel: "noopener noreferrer" })}
                                >
                                  {subItem.label}
                                </a>
                              ))}
                            </div>
                          </div>
                        </div>
                      ) : (
                        <a
                          href={item.href}
                          class="flex items-center text-sm font-medium text-gray-700 hover:text-gray-800 py-2"
                          {...(item.isExternal && { target: "_blank", rel: "noopener noreferrer" })}
                        >
                          {item.label}
                        </a>
                      )}
                    </div>
                  ))}
                </div>
              </div>

              <!-- Mobile menu and search (lg-) -->
              <div class="flex flex-1 items-center lg:hidden">
                <button
                  type="button"
                  class="-ml-2 rounded-md bg-white p-2 text-gray-400"
                  onclick="document.getElementById('mobile-menu').showModal()"
                >
                  <span class="sr-only">Open menu</span>
                  <svg
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    data-slot="icon"
                    aria-hidden="true"
                    class="size-6"
                  >
                    <path
                      d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"></path>
                  </svg>
                </button>
              </div>

               <div class="flex-3 flex justify-center lg:hidden">
                <a href="/">
                  <Image
                    src={logoImage}
                    alt="Frankie Wallace Logo"
                    class="h-16 w-auto lg:h-24 transition-all duration-200 object-contain"
                  />
                </a>
              </div>

              <div class="flex flex-1 items-center justify-end">
                <div class="flex items-center lg:ml-8">
     

                  <!-- <div class="flow-root">
                    <a href="#" class="group -m-2 flex items-center p-2">
                      <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        data-slot="icon"
                        aria-hidden="true"
                        class="size-6 shrink-0 text-gray-400 group-hover:text-gray-500"
                      >
                        <path
                          d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
                          stroke-linecap="round"
                          stroke-linejoin="round"></path>
                      </svg>
                      <span
                        class="ml-2 text-sm font-medium text-gray-700 group-hover:text-gray-800"
                        >0</span
                      >
                      <span class="sr-only">items in cart, view bag</span>
                    </a>
                  </div> -->
                </div>
              </div>
            </div>
        </div>
      </div>
    </nav>
  </header>

  <script
    src="https://cdn.jsdelivr.net/npm/@tailwindplus/elements@1"
    type="module"></script>
</div>

<script>
  // Extend HTMLButtonElement to include custom attributes
  interface HTMLButtonElement {
    command?: string;
    commandfor?: string;
  }

  // Mobile navigation submenu toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileNavToggles = document.querySelectorAll('.mobile-nav-toggle');
    
    mobileNavToggles.forEach(toggle => {
      toggle.addEventListener('click', function(event: Event) {
        const button = event.currentTarget as HTMLElement;
        const targetId = button.getAttribute('data-target');
        const submenu = document.getElementById(targetId!);
        const icon = button.querySelector('svg');
        
        if (submenu && icon) {
          submenu.classList.toggle('hidden');
          icon.classList.toggle('rotate-180');
        }
      });
    });
  });
</script>
