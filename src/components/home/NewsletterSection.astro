---
import Button from "../Button.astro";

// NewsletterSection component for the subscription form
---

<div class="bg-white py-20">
  <div class="max-w-xl mx-auto text-center px-4">
    <h2 class="text-3xl font-bold font-header text-gray-900 mb-4">
      Subscribe to get exclusive updates
    </h2>
    <p class="text-lg text-gray-600 font-body mb-8">
      Are you a baby and/or kids brand looking for beautiful, whimsical patterns
      for your products? Subscribe to my newsletter to be the first to see my
      latest designs and collections!
    </p>
    <form
      action="https://formspree.io/f/your-form-id"
      method="POST"
      action="https://formspree.io/f/meozvkzk"
      class="flex flex-col sm:flex-row gap-4 justify-center"
    >
      <input
        type="email"
        name="email"
        required
        placeholder="Your email address"
        class="w-full sm:w-auto px-4 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-accent"
      />

      <Button href="/pattern-library" class="px-6 py-2 rounded">
        Join Mailing List
      </Button>
    </form>
  </div>
</div>

