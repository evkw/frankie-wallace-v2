---
import Button from "../Button.astro";
import { Image } from 'astro:assets';
import newsletterImage from '../../data/images/EasterCardmockup.avif';

// NewsletterSection component for the subscription form
---

<div class="bg-white py-20">
  <div class="max-w-4xl mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left side - Easter Card Mockup -->
      <div class="flex justify-center ">
        <Image 
          src={newsletterImage} 
          alt="Easter Card Mockup" 
          class="max-w-sm w-full h-auto rounded-lg shadow-lg"
        />
      </div>
      
      <!-- Right side - Newsletter Form -->
      <div class="text-center lg:text-left">
        <h2 class="text-3xl font-bold font-header text-gray-900 mb-4">
          Your Free Duckling Days Art Card
        </h2>
        <p class="text-lg text-gray-600 font-body mb-8">
          Sign up to my VIP mailing list and get your printable art card instantly â€” plus first looks at my new collections.
        </p>
        <form
          method="POST"
          action="https://formspree.io/f/xkgzkvww"
          class="flex flex-col gap-4 justify-center "
        >

        <input
            type="text"
            name="name"
            required
            placeholder="Your name"
            class="w-full sm:w-auto px-4 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-accent"
          />

          <input
            type="email"
            name="email"
            required
            placeholder="Your email address"
            class="w-full sm:w-auto px-4 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-accent"
          />

          <Button type="submit" class="px-6 py-2 rounded">
            Join Mailing List
          </Button>
        </form>
      </div>
    </div>
  </div>
</div>

