---
import Button from "../../components/Button.astro";
import Layout from "../../layouts/Layout.astro";
import NewsletterPopup from "../../components/NewsletterPopup.astro";
import { getCollection } from "astro:content";
import FAQ from "../../components/FAQ.astro";

export async function getStaticPaths() {
  // Get all gallery data
  const allItems = await getCollection("gallery");

  // Generate paths for each item
  return allItems.map((item) => ({
    params: { id: item.id },
    props: { item },
  }));
}

// Get the item from props
const { item } = Astro.props;

const defaultCategoryTitle = "Seamless Repeat Pattern Collection";

// Create item data structure
const itemData = {
  id: item.id,
  title: item.data.title,
  description: item.data.description,
  image: item.data.image.src,
  imageAlt: item.data.image.alt,
  allImages: [item.data.image].concat(item.data.additionalImages),
  category: item.data.categoryTitle ?? defaultCategoryTitle,
  techniques: item.data.techniques,
  license:
    item.data.license === "non-exclusive"
      ? "Non-exclusive commercial license for 1 year. Need extended terms or exclusive rights? Just send me a message!"
      : "Exclusive commercial license for 1 year",
  protected: Boolean(item.data.protected),
};
---

<Layout>
  <div
    class="bg-gray-50 min-h-screen"
    data-protected={Boolean(item.data.protected) ? "true" : "false"}
    id={item.data.id}
  >
    <!-- Breadcrumb -->
    <div class="bg-white border-b">
      <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-4">
            <li>
              <a
                href="/gallery/surfacePattern"
                class="text-gray-500 hover:text-gray-700 transition-colors"
              >
                Back to Portfolio
              </a>
            </li>
            <li>
              <svg
                class="flex-shrink-0 h-5 w-5 text-gray-300"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
            </li>
            <li class="text-gray-900 font-medium">
              {itemData.title}
            </li>
          </ol>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Image Section -->
        <div class="space-y-6">
          <div
            class="aspect-square bg-white rounded-lg shadow-sm overflow-hidden"
          >
            <img
              id="main-image"
              src={itemData.image}
              alt={itemData.imageAlt}
              class="w-full h-full object-cover transition-opacity duration-300"
              loading="lazy"
              decoding="async"
            />
          </div>

          <!-- Thumbnail Gallery -->
          <div class="grid grid-cols-4 gap-4">
            {
              itemData.allImages.map((image, index) => (
                <div
                  class="aspect-square bg-gray-200 rounded-lg cursor-pointer hover:shadow-lg hover:scale-105 transition-all duration-200 border-2 border-transparent hover:border-gray-400"
                  onclick={`switchImage('${image.src}', '${image.alt}')`}
                >
                  <img
                    src={image.src}
                    alt={image.alt}
                    class="w-full h-full object-cover rounded-lg"
                  />
                </div>
              ))
            }
          </div>
        </div>

        <!-- Details Section -->
        <div class="space-y-8">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
              {item.data.title}
            </h1>
            <p class="text-lg text-gray-600 mb-4">
              {itemData.category}
            </p>
            <p class="text-gray-700 leading-relaxed">
              {itemData.description}
            </p>
          </div>

          <!-- Details Grid -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <h3
                class="text-sm font-medium text-gray-500 uppercase tracking-wide"
              >
                Patterns & Techniques
              </h3>
              <div class="mt-2 flex flex-wrap gap-2">
                {
                  itemData.techniques.map((technique) => (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                      {technique}
                    </span>
                  ))
                }
              </div>
            </div>

            <div>
              <h3
                class="text-sm font-medium text-gray-500 uppercase tracking-wide"
              >
                License
              </h3>
              <p class="mt-2 text-gray-900">{itemData.license}</p>
            </div>
          </div>

          <!-- Action Buttons -->
          <div
            class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200"
          >
            <Button
              href="/licensing"
              class="bg-black text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors"
            >
              Enquire about licensing
            </Button>
          </div>

          <!-- Related Works 
          <div class="pt-8 border-t border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              Related Works
            </h3>
            <div class="grid grid-cols-3 gap-4">
              <div class="aspect-square bg-gray-200 rounded-lg"></div>
              <div class="aspect-square bg-gray-200 rounded-lg"></div>
              <div class="aspect-square bg-gray-200 rounded-lg"></div>
            </div>
          </div>-->
        </div>
      </div>
    </div>

    <FAQ />
  </div>


  <script is:inline>
    // Gate protected items: if not a member, redirect to password with item id
    function gateAccess() {
      const root = document.querySelector("[data-protected]");
      const isProtected = root?.getAttribute("data-protected") === "true";
      const isMember = localStorage.getItem("isMember") === "true";
      if (isProtected && !isMember) {
        window.location.replace(`/password?id=${encodeURIComponent(root.id)}`);
        return;
      }
    }

    function switchImage(src, alt) {
      console.warn(src, alt);
      const mainImage = document.getElementById("main-image");
      if (mainImage) {
        // Add fade out effect
        mainImage.style.opacity = "0";

        // Switch image after fade out
        setTimeout(() => {
          mainImage.src = src;
          mainImage.alt = alt;
          mainImage.style.opacity = "1";
        }, 150);
      }
    }


    (() => {
      gateAccess();
    })();
  </script>
</Layout>
