---
import type { GTagProp } from "../data/models/tagProp.model";
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import xmasOffer from "../data/images/christmas-offer.webp";
import Button from "../components/Button.astro";

const tag: GTagProp = {
  eventName: "newsletter_signup_completed",
  props: {
    event_category: "conversion",
    event_label: "Newsletter Page",
  },
};
---

<Layout hideNav={true}>
  <div class="bg-gray-50">
    <div
      class="mx-auto max-w-2xl px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:px-8"
    >
      <!-- Details section -->
      <section aria-labelledby="details-heading">
        <div class="flex flex-col items-center text-center">
          <h2
            id="details-heading"
            class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl font-header"
          >
            Join my VIP list and enjoy a free gift
          </h2>
          <p class="mt-3 max-w-3xl text-lg text-gray-600 font-body">
            As a thank-you for being here, youâ€™ll instantly receive a set of
            printable, hand-painted Christmas gift tags, perfect for elevating
            your holiday packaging, customer orders, or personal gift wrapping.
          </p>
        </div>

        <div class="pt-24">
          <h2
            id="details-heading"
            class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl font-header text-center mb-16"
          >
            As a VIP, you'll get:
          </h2>

          <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
              <!-- Left Benefits Column -->
              <div class="space-y-10 text-base/7 text-gray-400 font-body">
                <div class="relative pl-9">
                  <dt class="inline font-semibold text-black">
                    Monthly creative newsletters
                  </dt>
                  <dd class="inline">
                    - Insights, prompts, and practical tips to help you design
                    cohesive, elevated collections that truly resonate with your
                    customers.
                  </dd>
                </div>
                <div class="relative pl-9">
                  <dt class="inline font-semibold text-black">
                    Early access to new pattern releases
                  </dt>
                  <dd class="inline">
                    - Be the first to preview new collections before they are
                    publicly available.
                  </dd>
                </div>
              </div>

              <!-- Image Column - Middle -->
              <div class="lg:row-span-2">
                <Image
                  src={xmasOffer}
                  alt="Christmas Offer - Free Printable Gift Tags"
                  class="w-full h-auto rounded-lg shadow-lg sticky top-8"
                />
              </div>

              <!-- Right Benefits Column -->
              <div class="space-y-10 text-base/7 text-gray-400 font-body">
                <div class="relative pl-9">
                  <dt class="inline font-semibold text-black">
                    VIP-only licensing rates
                  </dt>
                  <dd class="inline">
                    - Special pricing on licensing for your bows, apparel, textiles,
                    or small-batch products.
                  </dd>
                </div>
                <div class="relative pl-9">
                  <dt class="inline font-semibold text-black">
                    Occasional behind-the-scenes extras
                  </dt>
                  <dd class="inline">
                    - Sketchbook peeks, process notes, and inspiration from my
                    watercolour world.
                  </dd>
                </div>
              </div>
            </div>
          </div>
        </div>

        <form
          method="POST"
          action="https://formspree.io/f/xkgzkvww"
          class="flex flex-col gap-4 justify-center pt-12 max-w-md mx-auto"
        >
          <input
            type="text"
            name="name"
            required
            placeholder="Your name"
            class="w-full sm:w-auto px-4 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-accent"
          />

          <input
            type="email"
            name="email"
            required
            placeholder="Your email address"
            class="w-full sm:w-auto px-4 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-accent"
          />

          <Button type="submit" class="px-6 py-2 rounded">
            Join Mailing List
          </Button>
        </form>
      </section>
    </div>
  </div>

  <!-- 

  <NewsletterSection tag={tag} /> -->
</Layout>
