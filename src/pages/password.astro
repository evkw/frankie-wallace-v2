---
import Layout from "../layouts/Layout.astro";
import PageTitle from "../components/PageTitle.astro";
import NewsletterPopup from "../components/NewsletterPopup.astro";

const PASSWORD = import.meta.env.PUBLIC_PASSWORD ?? "";
---

<Layout hideNav={false}>
  <div class="bg-gray-50">
    <PageTitle pageTitle={"Member Access"}>
      <p class="mt-6 mb-6 text-lg leading-7 text-gray-700 max-w-xl mx-auto font-body">
        Enter your access password to view member-only collections. If you don't have a password yet, join the VIP list below to request access and get early previews of restricted designs.
      </p>
    </PageTitle>

    <div class="mx-auto max-w-2xl px-4 py-8 sm:px-6 lg:px-8 space-y-8">
      <!-- Password Gate -->
      <form id="password-form" class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
        <input
          id="password"
          type="password"
          class="w-full px-4 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-accent"
          placeholder="Enter password"
          required
        />

        <div class="mt-4 flex items-center gap-3">
          <button type="submit" class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800 transition-colors">Unlock</button>
        </div>

        <p id="status" class="mt-4 text-sm text-gray-600"></p>
      </form>
      <div class="my-6 text-center">
        <a href="#" id="show-newsletter" class="text-xl font-header text-accent hover:text-accent/80 underline">Not a VIP yet? Click here to sign up</a>
      </div>

      <div id="newsletter-popup-wrap">
        <NewsletterPopup autoOpen={false} />
      </div>

    </div>
  </div>

  <script is:inline>
    const EXPECTED = 'patterns25'; // Replace with your actual password from environment
    const form = document.getElementById('password-form');
    const input = document.getElementById('password');
    const statusEl = document.getElementById('status');

    function getQueryParam(name) {
      const params = new URLSearchParams(window.location.search);
      return params.get(name);
    }

    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      const val = input?.value || '';

      if (!EXPECTED) {
        statusEl.textContent = 'Password not configured. Please set PASSWORD in your environment.';
        statusEl.className = 'mt-4 text-sm text-red-600';
        return;
      }

      if (val === EXPECTED) {
        try {
          localStorage.setItem('isMember', 'true');
        } catch {}
        statusEl.textContent = 'Access granted. Redirectingâ€¦';
        statusEl.className = 'mt-4 text-sm text-green-700';
        // If the user came from a gallery page, send them back; else go to /gallery/surfacePattern
        const requestedId = getQueryParam('id');
        const back = requestedId
          ? `/gallery-item/${encodeURIComponent(requestedId)}`
          : (document.referrer && new URL(document.referrer).pathname.startsWith('/gallery')
              ? new URL(document.referrer).pathname
              : '/gallery/surfacePattern');
        setTimeout(() => {
          window.location.href = back;
        }, 600);
      } else {
        statusEl.textContent = 'Incorrect password. Please try again.';
        statusEl.className = 'mt-4 text-sm text-red-600';
      }
    });

    // Toggle newsletter popup only when link is clicked
    document.getElementById('show-newsletter')?.addEventListener('click', (e) => {
      e.preventDefault();
      try {
        // Open via global API exposed by NewsletterPopup
        if (window.FrankieNewsletter && typeof window.FrankieNewsletter.open === 'function') {
          window.FrankieNewsletter.open();
        }
      } catch {}
      const wrap = document.getElementById('newsletter-popup-wrap');
      wrap?.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });
  </script>
</Layout>
