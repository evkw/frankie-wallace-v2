---
import Layout from "../../layouts/Layout.astro";
import { Image } from 'astro:assets';
import { getCollection } from "astro:content";
import ducklingDaysImage from "../../data/images/Duckling Days.png";
const { category } = Astro.params;

export async function getStaticPaths() {
  return [
    { params: { category: "all" } },
    { params: { category: "childrensIllustration" } },
    { params: { category: "weddingIllustration" } },
    { params: { category: "weddingStationery" } },
    { params: { category: "surfacePattern" } },
  ];
}

const items = await getCollection("gallery", (items) => !!category ? items.data.category === category : true );

// Set page title based on gallery type
const pageTitle =
  category === "all"
    ? "All Illustrations"
    : category === "childrensIllustration"
      ? "Childrens Book Illustrations"
      : category === "weddingIllustration"
        ? "Live Wedding Illustrations"
        : category === "weddingStationery"
          ? "Wedding Stationery"
        : "Surface Pattern Designs";
---

<Layout>
  <div class="bg-gray-50 min-h-screen">
    <!-- Hero Section -->
    <div class="bg-white relative overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 opacity-10">
        <img
          src={ducklingDaysImage.src}
          alt="Duckling Days background"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="relative mx-auto max-w-7xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
        <div class="text-center">
          <h1
            class="text-4xl font-bold font-heading tracking-tight text-gray-900 sm:text-5xl md:text-6xl"
          >
            {pageTitle}
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-600 max-w-3xl mx-auto font-body">
            Explore my collection of hand-painted illustrations, each piece
            crafted with care and attention to detail.
          </p>
        </div>
      </div>
    </div>

    <!-- Gallery Grid -->
    <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
      >
        {
          items.map((item) => (
            <a
              href={`/gallery-item/${item.id}`}
              class="group block bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 cursor-pointer overflow-hidden"
            >
              <div class="aspect-square overflow-hidden">
                <img
                  src={item.data.image.src}
                  alt={item.data.image.alt}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                  decoding="async"
                />
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-gray-700 transition-colors">
                  {item.data.title}
                </h3>
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <span>Click to view details</span>
                  <svg
                    class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </div>
              </div>
            </a>
          ))
        }
      </div>

      <!-- Empty State -->
      {
        items.length === 0 && (
          <div class="text-center py-12">
            <div class="mx-auto h-24 w-24 text-gray-300">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                />
              </svg>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">
              No illustrations found
            </h3>
            <p class="mt-2 text-gray-500">
              Try a different gallery type or check back later.
            </p>
          </div>
        )
      }
    </div>
  </div>
</Layout>
