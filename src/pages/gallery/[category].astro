---
import Layout from "../../layouts/Layout.astro";

import { getCollection } from "astro:content";
import Button from "../../components/Button.astro";
import PageTitle from "../../components/PageTitle.astro";

const { category } = Astro.params;

export async function getStaticPaths() {
  return [
    { params: { category: "all" } },
    { params: { category: "childrensBooks" } },
    { params: { category: "venues" } },
    { params: { category: "surfacePattern" } },
  ];
}

const items = await getCollection("gallery", (items) => {
  return !!category && category !== "all"
    ? items.data.category === category
    : true;
});

// Set page title based on gallery type
const pageTitle =
  category === "all"
    ? "All Illustrations"
    : category === "childrensBooks"
      ? "Childrens Book Illustrations"
      : category === "venues"
        ? "Venue Illustrations"
        : "Surface Pattern Designs";
---

<Layout>
  <div class="bg-gray-50 min-h-screen">
    <!-- Hero Section -->

    <PageTitle pageTitle={pageTitle}>
      <p
        class="mt-6 mb-6 text-2xl leading-8 text-gray-600 max-w-3xl mx-auto font-body"
      >
        Ready-to-license designs blending storybook nostalgia with modern
        simplicity to add warmth and distinction to your product line.
      </p>

      <p class="text-base text-gray-700 font-body mb-6 max-w-3xl mx-auto">
        Each design begins as a hand-painted watercolour, crafted to help brands
        connect emotionally with their audience and stand out in a digital
        world.
      </p>

      <p class="text-base text-gray-700 font-body max-w-3xl mx-auto mb-6">
        All collections are available for non-exclusive licensing, and I also
        welcome exclusive collaborations and custom design projects.
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 pt-6 mx-auto max-w-3xl justify-center"
      >
        <Button
          href="/licensing"
          class="bg-black text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors"
        >
          Work with me
        </Button>
      </div>
    </PageTitle>
    <!-- Gallery Grid -->
    <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
      >
        {
          items.map((item) => (
            <a
              href={`/gallery-item/${item.id}`}
              class="group block bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 cursor-pointer overflow-hidden"
            >
              <div class="aspect-square overflow-hidden">
                <img
                  src={item.data.image.src}
                  alt={item.data.image.alt}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                  decoding="async"
                />
              </div>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-gray-700 transition-colors">
                  {item.data.title}
                </h3>
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <span>Click to view details</span>
                  <svg
                    class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </div>
              </div>
            </a>
          ))
        }
      </div>

      <!-- Empty State -->
      {
        items.length === 0 && (
          <div class="text-center py-12">
            <div class="mx-auto h-24 w-24 text-gray-300">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                />
              </svg>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">
              No illustrations found
            </h3>
            <p class="mt-2 text-gray-500">
              Try a different gallery type or check back later.
            </p>
          </div>
        )
      }
    </div>
  </div>
</Layout>
