---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="bg-gray-50 flex flex-col items-center justify-center min-h-[80vh] py-10">
    <h1 class="text-3xl font-semibold mb-6 font-header text-center">Let's Work Together!</h1>
    <form action="https://formspree.io/f/xblkkjzz" method="POST" class="space-y-6 max-w-xl w-full font-body bg-white p-8 rounded shadow-md">
      <div>
        <label for="name" class="block font-medium">Name <span class="text-red-500">*</span></label>
        <input type="text" name="name" id="name" required class="w-full border rounded px-3 py-2 mt-1" />
      </div>

      <div>
        <label for="email" class="block font-medium">Email <span class="text-red-500">*</span></label>
        <input type="email" name="email" id="email" required class="w-full border rounded px-3 py-2 mt-1" />
      </div>

      <div>
        <label for="service" class="block font-medium">Which Service</label>
        <select name="service" id="service" required class="w-full border rounded px-3 py-2 mt-1">
          <option value="">Select a service</option>
          <option>Custom Surface Pattern Design</option>
          <option>Childrens Book Illustration</option>
          <option>Other</option>
        </select>
      </div>

      <div>
        <label for="message" class="block font-medium">Message</label>
        <textarea name="message" id="message" rows="6" required class="w-full border rounded px-3 py-2 mt-1"></textarea>
      </div>

      <button type="submit" class="bg-black text-white px-6 py-2 rounded hover:bg-gray-800 w-full">Send</button>
    </form>
    <div class="flex gap-6 mt-8">
      <a href="https://instagram.com/" target="_blank" rel="noopener" aria-label="Instagram" class="text-gray-500 hover:text-black text-2xl">
        <svg fill="currentColor" viewBox="0 0 24 24" class="w-7 h-7"><path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5zm4.25 3.25a5.25 5.25 0 1 1 0 10.5 5.25 5.25 0 0 1 0-10.5zm0 1.5a3.75 3.75 0 1 0 0 7.5 3.75 3.75 0 0 0 0-7.5zm5.13.62a1.13 1.13 0 1 1-2.25 0 1.13 1.13 0 0 1 2.25 0z"/></svg>
      </a>
      <a href="https://linkedin.com/" target="_blank" rel="noopener" aria-label="LinkedIn" class="text-gray-500 hover:text-black text-2xl">
        <svg fill="currentColor" viewBox="0 0 24 24" class="w-7 h-7"><path d="M19 0h-14c-2.76 0-5 2.24-5 5v14c0 2.76 2.24 5 5 5h14c2.76 0 5-2.24 5-5v-14c0-2.76-2.24-5-5-5zm-11 19h-3v-9h3v9zm-1.5-10.28c-.97 0-1.75-.79-1.75-1.75s.78-1.75 1.75-1.75 1.75.79 1.75 1.75-.78 1.75-1.75 1.75zm13.5 10.28h-3v-4.5c0-1.08-.02-2.47-1.5-2.47-1.5 0-1.73 1.17-1.73 2.39v4.58h-3v-9h2.89v1.23h.04c.4-.75 1.37-1.54 2.82-1.54 3.01 0 3.57 1.98 3.57 4.56v4.75z"/></svg>
      </a>
      <a href="https://facebook.com/" target="_blank" rel="noopener" aria-label="Facebook" class="text-gray-500 hover:text-black text-2xl">
        <svg fill="currentColor" viewBox="0 0 24 24" class="w-7 h-7"><path d="M22.675 0h-21.35c-.733 0-1.325.592-1.325 1.326v21.348c0 .733.592 1.326 1.325 1.326h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.797.143v3.24l-1.918.001c-1.504 0-1.797.715-1.797 1.763v2.312h3.587l-.467 3.622h-3.12v9.294h6.116c.73 0 1.323-.593 1.323-1.326v-21.349c0-.734-.593-1.326-1.324-1.326z"/></svg>
      </a>
    </div>
  </div>
</Layout>